<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:GensouSakuya.Aria2.Desktop.Shell.Controls.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="50"
             x:Class="GensouSakuya.Aria2.Desktop.Shell.Controls.DownloadTaskItem">
  <UserControl.DataContext>
    <vm:DownloadTaskItemViewModel></vm:DownloadTaskItemViewModel>
  </UserControl.DataContext>
  <StackPanel Name="buttonStack" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Horizontal">
    <Image Source="{Binding Img}" Width="50" Height="50"></Image>
    <TextBlock Text="{Binding TaskName}"></TextBlock>
    <ProgressBar Minimum="0" Maximum="100" Value="{Binding Progress}" Height="10"></ProgressBar>
  </StackPanel>
</UserControl>
