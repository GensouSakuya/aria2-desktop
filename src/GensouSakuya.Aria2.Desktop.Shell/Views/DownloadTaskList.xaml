<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400" Background="#ebf0f6"
             xmlns:ctl="clr-namespace:GensouSakuya.Aria2.Desktop.Shell.Controls"
             xmlns:vm="clr-namespace:GensouSakuya.Aria2.Desktop.Shell.ViewModels"
             x:Class="GensouSakuya.Aria2.Desktop.Shell.Views.DownloadTaskList">
  <UserControl.DataContext>
    <vm:DownloadTaskListViewModel></vm:DownloadTaskListViewModel>
  </UserControl.DataContext>
  <DockPanel VerticalAlignment="Top">
    <ItemsControl Items="{Binding Tasks}">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <ctl:DownloadTaskItem DataContext="{Binding .}">
          </ctl:DownloadTaskItem>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </DockPanel>
</UserControl>
